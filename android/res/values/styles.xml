<resources>
    <style name="baseStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="defaultLabel" parent="baseStyle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="aboutDefaultLabel" parent="baseStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="aboutSingleLabel" parent="aboutDefaultLabel">
        <item name="android:paddingTop">2px</item>
    </style>

    <style name="wagerLabel" parent="defaultLabel">
        <item name="android:paddingRight">7px</item>
    </style>
    <style name="wager" parent="baseStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">65px</item>
    </style>
    <style name="defaultValue" parent="baseStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">4px</item>
    </style>
    <style name="statusValue" parent="defaultLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingRight">10px</item>
        <item name="android:gravity">center</item>

    </style>
</resources>